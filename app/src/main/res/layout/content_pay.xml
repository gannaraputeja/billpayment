<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_pay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.yeshwanthemani.billpayementapp.PayActivity"
    tools:showIn="@layout/activity_pay">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/bill"
        android:text = "Bill"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"/>









    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Transaction ID :     "
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:id="@+id/tid"
        android:layout_below="@+id/bill"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"

        android:id = "@+id/pt1"
        android:layout_below="@+id/bill"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/tid"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Merchant Name :  "
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:id="@+id/mn"
        android:layout_below="@+id/tid"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"

        android:id = "@+id/pt2"
        android:layout_below="@+id/tid"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/mn"/>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Amount :                  "
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:id="@+id/amt"
        android:layout_below="@+id/mn"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"

        android:id = "@+id/pt3"
        android:layout_below="@+id/mn"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/amt"/>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Description :           "
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:id="@+id/desc"
        android:layout_below="@+id/amt"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"

        android:id = "@+id/pt4"
        android:layout_below="@+id/amt"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/desc"/>


    <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/desc"
    android:layout_marginTop="50dp"
    android:onClick="pay"
    android:text="Pay Now"
        android:id = "@+id/b1"
    android:background="#FF6600"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc"
        android:layout_marginTop="50dp"

        android:text="Payment Successfull"
        android:id = "@+id/b2"
        android:background="#32cd32"/>










</RelativeLayout>
